    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:background="@drawable/shape_goods_bg"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_zwt_goods" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_exchange_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:text="粉卡及以上可兑"
            android:textColor="#A38843"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_goodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text="麦萝氏绿瘦澳洲绿植精粹粉绿瘦澳洲"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/ll_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_price_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/integral_ic_integral"
                android:text="1000"
                android:textColor="#BD1313"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_goods_price_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+¥200"
                android:textColor="#BD1313"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_exchangNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:text="1.3万件已兑换"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>
    <!--    </androidx.cardview.widget.CardView>-->
</FrameLayout>
